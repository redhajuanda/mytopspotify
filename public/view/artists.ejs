<main role="main">
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Your Top <%= title %></h1>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">
        <div class="row">
            <% for(var i=0; i<items.items.length; i++){ %>
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                <div class="wrapper">
                <img class="card-img-top img-fluid" src="<%- items.items[i].images[0].url %>" alt="Card image cap">
                </div>
                <div class="card-body">
                    <h4 class="card-text"><%= items.items[i].name %></h4>
                    <div class="d-flex justify-content-between align-items-center">
                        <p style="display: block; text-overflow: ellipsis; word-wrap: break-word; overflow: hidden;bmax-height: 1.8em;">
                            <% for(var j=0; j<items.items[i].genres.length; j++) { %> #<%= items.items[i].genres[j] %> <% } %>
                        </p>
                    </div>
                </div>
                </div>
            </div>
            <% } %>
        </div>
        </div>
    </div>

</main>